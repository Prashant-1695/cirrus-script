#!/bin/bash
# Lets see machine specifications and environments
df -h
free -h

. /tmp/ci/function

install_apt

tg "Build Started!
Status: $progress"

SECONDS=0

cd /tmp # Where to download cccahe

echo "|| Downloading CCACHE ||"
git clone --depth=1 https://who-em-i:$gh_token@github.com/ImPrashantt/ccache_backup.git $rom_name
tg "Cache was Downloaded Successfully!
Time Took: $(($SECONDS / 60)) minute(s) and $(($SECONDS % 60)) second(s).
Status: $progress"

# Extract ccache so ci can use it
echo "â€¢ Extracting CCACHE â€¢"
if [ -e $rom_name/*.tar.gz ]; then
mv $rom_name/*.tar.gz /tmp
time tar xf *.tar.gz
fi

# Remove unnecessary downloaded file
rm -rf *.tar.gz

# fix
echo "" > /etc/mtab
